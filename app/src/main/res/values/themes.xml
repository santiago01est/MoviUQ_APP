<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviUq" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_main</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Activity -->
    <!-- Primary colors welcome Activity -->
    <style name="ThemeActivityWelcome" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/bttn_01</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/bttn_01</item>
    </style>

    <!-- Create Profile Activity -->

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Home Activity -->

    <!-- MenuBar -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <!-- Bottom Bar Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/bttn_01</item>
        <item name="colorOnPrimary">@color/green_main</item>
        <item name="itemTextAppearanceActive">@font/baloo_da</item>
    </style>

    <!--styles collapsing -->
    <style name="CollapsingTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryDark">@color/green_main</item>
        <item name="colorAccent">@color/bttn_01</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/green_black</item>
    </style>

    <style name="ExpandedAppBar">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <!-- Lyris -->

    <!-- Fonts Main Title-->
    <style name="FontsMainTitle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Fonts Medium text-->
    <style name="FontsMediumText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Fonts little text-->
    <style name="FontsLittleText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

</resources>