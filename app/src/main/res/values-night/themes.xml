<resources>
    <!-- Base application theme. -->
    <style name="Theme.MoviUq" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_main</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" >@color/bttn_01</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Colores Basicos Activity Bienvenida -->
    <style name="ThemeActivityWelcome" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/bttn_01</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor" >@color/bttn_01</item>

    </style>

    <!-- Create Profile Activity -->


    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Home Activity -->




    <!-- Bottom Bar Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/bttn_01</item>
        <item name="colorOnPrimary">@color/green_main</item>
        <item name="itemTextAppearanceActive">@font/berlin_sans_demi_bold</item>
    </style>

    <!--styles collapsing -->
    <style name="CollapsingTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryDark">@color/green_main</item>
        <item name="colorAccent">@color/bttn_01</item>
        <item name="fontFamily">@font/berlin_sans_demi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/green_black</item>
    </style>

    <style name="ExpandedAppBar">
        <item name="fontFamily">@font/berlin_sans_demi_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green_main</item>

    </style>

    <!-- Lyris -->

    <!-- Fonts Main Title-->
    <style name="FontsMainTitle">
        <item name="fontFamily">@font/berlin_sans_demi_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Fonts Medium text-->
    <style name="FontsMediumText">
        <item name="fontFamily">@font/berlin_sans_demi_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Fonts little medium text-->
    <style name="FontsLittle_MediumText">
        <item name="fontFamily">@font/berlin_sans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Fonts little text-->
    <style name="FontsLittleText">
        <item name="fontFamily">@font/berlin_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Fonts Very little text-->
    <style name="FontsVeryLittleText">
        <item name="fontFamily">@font/berlin_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/letra_02</item>
    </style>

    <!-- Style hour-->
    <style name="PickerTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/green</item>
    </style>





    <!-- Floating button -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/green</item>
        <item name="colorOnContainer">@color/green_main</item>
        <item name="strokeColor">@color/green_black</item>

    </style>

    <!-- shape button-->
    <style name="shapeButtom">
        <item name="cornerSize">50%</item>

    </style>
</resources>